{
	"name": "fenix",
	"publisher": "ACharLuk",
	"repository": {
		"url": "https://github.com/acharluk/Fenix"
	},
	"icon": "logo.png",
	"displayName": "Fenix",
	"description": "Fenix is a powerful and easy to use project generator for Visual Studio Code",
	"version": "1.0.3",
	"engines": {
		"vscode": "^1.43.0"
	},
	"categories": [
		"Other",
		"Programming Languages"
	],
	"activationEvents": [
		"onCommand:fenix.open",
		"onCommand:fenix.repo.delete",
		"onView:fenixQuickCreate",
		"onView:fenixRepositories",
		"onView:fenixEnvironment"
	],
	"main": "./build/extension.js",
	"contributes": {
		"commands": [
			{
				"command": "fenix.open",
				"title": "Fenix: Open Fenix",
				"icon": {
					"dark": "no1.png",
					"light": "no1.png"
				}
			},
			{
				"command": "fenix.repo.delete",
				"title": "Delete repository",
				"icon": {
					"dark": "assets/icons/chrome-close.svg",
					"light": "assets/icons/chrome-close.svg"
				}
			},
			{
				"command": "fenix.repo.add",
				"title": "Fenix: Add new repository",
				"icon": {
					"dark": "assets/icons/new-file.svg",
					"light": "assets/icons/new-file.svg"
				}
			},
			{
				"command": "fenix.template.run",
				"title": "Run this template",
				"icon": {
					"dark": "assets/icons/rocket.svg",
					"light": "assets/icons/rocket.svg"
				}
			},
			{
				"command": "fenix.template.fav",
				"title": "Add/Remove this template from Quick Create",
				"icon": {
					"dark": "assets/icons/star-empty.svg",
					"light": "assets/icons/star-empty.svg"
				}
			},
			{
				"command": "fenix.template.share",
				"title": "Share via Twitter",
				"icon": {
					"dark": "assets/icons/twitter.svg",
					"light": "assets/icons/twitter.svg"
				}
			},
			{
				"command": "fenix.env.new",
				"title": "New variable",
				"icon": {
					"dark": "assets/icons/new-file.svg",
					"light": "assets/icons/new-file.svg"
				}
			},
			{
				"command": "fenix.env.edit",
				"title": "Edit variable",
				"icon": {
					"dark": "assets/icons/edit.svg",
					"light": "assets/icons/edit.svg"
				}
			},
			{
				"command": "fenix.env.delete",
				"title": "Delete variable",
				"icon": {
					"dark": "assets/icons/chrome-close.svg",
					"light": "assets/icons/chrome-close.svg"
				}
			}
		],
		"configuration": {
			"title": "Fenix",
			"scope": "application",
			"properties": {
				"fenix.repos": {
					"type": "array",
					"default": []
				},
				"fenix.runCommands": {
					"enum": [
						true,
						false,
						"ask"
					],
					"default": "ask"
				},
				"fenix.env": {
					"type": "object",
					"default": {}
				},
				"fenix.pinned": {
					"type": "array",
					"default": []
				}
			}
		},
		"viewsContainers": {
			"activitybar": [
				{
					"id": "fenixView",
					"title": "Fenix",
					"icon": "no1.png"
				}
			],
			"panel": [
				{
					"id": "fenix-panel",
					"title": "Fenix",
					"icon": "no1.png"
				}
			]
		},
		"views": {
			"fenixView": [
				{
					"id": "fenixQuickCreate",
					"name": "Quick create"
				},
				{
					"id": "fenixRepositories",
					"name": "Repositories"
				},
				{
					"id": "fenixEnvironment",
					"name": "Environment"
				}
			]
		},
		"menus": {
			"commandPalette": [
				{
					"command": "fenix.repo.delete",
					"when": "false"
				},
				{
					"command": "fenix.template.run",
					"when": "false"
				},
				{
					"command": "fenix.template.share",
					"when": "false"
				},
				{
					"command": "fenix.template.fav",
					"when": "false"
				},
				{
					"command": "fenix.env.new",
					"when": "false"
				},
				{
					"command": "fenix.env.edit",
					"when": "false"
				},
				{
					"command": "fenix.env.delete",
					"when": "false"
				}
			],
			"view/title": [
				{
					"command": "fenix.open",
					"when": "view == fenixQuickCreate",
					"group": "navigation"
				},
				{
					"command": "fenix.repo.add",
					"when": "view == fenixRepositories",
					"group": "navigation"
				},
				{
					"command": "fenix.env.new",
					"when": "view == fenixEnvironment",
					"group": "navigation"
				}
			],
			"view/item/context": [
				{
					"command": "fenix.repo.delete",
					"when": "viewItem == fenix-repo",
					"group": "inline"
				},
				{
					"command": "fenix.template.run",
					"when": "viewItem == fenix-quick",
					"group": "inline"
				},
				{
					"command": "fenix.template.fav",
					"when": "viewItem == fenix-template",
					"group": "inline"
				},
				{
					"command": "fenix.template.share",
					"when": "viewItem == fenix-template",
					"group": "inline"
				},
				{
					"command": "fenix.env.edit",
					"when": "viewItem == fenix-env",
					"group": "inline"
				},
				{
					"command": "fenix.env.delete",
					"when": "viewItem == fenix-env",
					"group": "inline"
				}
			]
		}
	},
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -p ./",
		"watch": "tsc -watch -p ./",
		"pretest": "npm run compile",
		"lint": "eslint -c .eslintrc.js --ext .ts src"
	},
	"devDependencies": {
		"@types/glob": "^7.1.1",
		"@types/node": "^12.12.31",
		"@types/node-fetch": "^2.5.5",
		"@types/vscode": "^1.43.0",
		"@typescript-eslint/eslint-plugin": "^3.0.0",
		"@typescript-eslint/parser": "^3.0.0",
		"eslint": "^7.1.0",
		"glob": "^7.1.5",
		"tslint": "^6.1.0",
		"typescript": "^3.6.4",
		"vscode-test": "^1.2.2"
	},
	"dependencies": {
		"lua-in-js": "^2.2.0",
		"node-fetch": "^2.6.0"
	}
}
